<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FormSeleccionarUbiPedido">

    <ImageButton
        android:id="@+id/btn_regresar_selec_ubi_form_anterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_return"
        app:tint="#3F51B4" />

    <Button
        android:id="@+id/btn_guardar_ubi_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#3F51B5"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="Guardar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/map_pedido_agregar_ubicacion"
        app:layout_constraintStart_toStartOf="@+id/map_pedido_agregar_ubicacion"
        app:layout_constraintTop_toBottomOf="@+id/tv_latitud" />

    <Button
        android:id="@+id/btn_cancel_agregar_ubi_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#3F51B5"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="Cancelar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_guardar_ubi_pedido"
        app:layout_constraintStart_toStartOf="@+id/btn_guardar_ubi_pedido"
        app:layout_constraintTop_toBottomOf="@+id/btn_guardar_ubi_pedido" />

    <fragment
        android:id="@+id/map_pedido_agregar_ubicacion"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="325dp"
        android:layout_height="513dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_regresar_selec_ubi_form_anterior"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".GGoogleMapsActivity" />

    <TextView
        android:id="@+id/label_latitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="Latitud"
        app:layout_constraintStart_toStartOf="@+id/map_pedido_agregar_ubicacion"
        app:layout_constraintTop_toBottomOf="@+id/map_pedido_agregar_ubicacion" />

    <TextView
        android:id="@+id/label_longitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="Longitud"
        app:layout_constraintStart_toEndOf="@+id/label_latitud"
        app:layout_constraintTop_toTopOf="@+id/label_latitud" />

    <TextView
        android:id="@+id/tv_latitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        app:layout_constraintStart_toStartOf="@+id/label_latitud"
        app:layout_constraintTop_toBottomOf="@+id/label_latitud" />

    <TextView
        android:id="@+id/tv_longitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        app:layout_constraintStart_toStartOf="@+id/label_longitud"
        app:layout_constraintTop_toBottomOf="@+id/label_longitud" />

</androidx.constraintlayout.widget.ConstraintLayout>