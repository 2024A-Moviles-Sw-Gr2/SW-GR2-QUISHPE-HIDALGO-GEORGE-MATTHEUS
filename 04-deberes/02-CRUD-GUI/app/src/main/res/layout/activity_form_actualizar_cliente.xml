<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:context=".view.FormActualizarCliente">

    <TextView
        android:id="@+id/tv_actualizar_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="ACTUALIZAR CLIENTE"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_actC_nombre"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/tv_actC_id"
        app:layout_constraintStart_toStartOf="@+id/tv_actC_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_actC_id" />

    <EditText
        android:id="@+id/input_actC_fechaRegistro"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:hint="Fecha de registro"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/input_actC_email"
        app:layout_constraintStart_toStartOf="@+id/input_actC_email"
        app:layout_constraintTop_toBottomOf="@+id/input_actC_email" />

    <Button
        android:id="@+id/btn_actualizar_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#3F51B5"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="Actualizar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_actC_activo" />

    <Button
        android:id="@+id/btn_cancel_act_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3F51B5"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="Cancelar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_actualizar_cliente"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/btn_actualizar_cliente"
        app:layout_constraintTop_toBottomOf="@+id/btn_actualizar_cliente" />

    <EditText
        android:id="@+id/input_actC_email"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/input_actC_nombre"
        app:layout_constraintStart_toStartOf="@+id/input_actC_nombre"
        app:layout_constraintTop_toBottomOf="@+id/input_actC_nombre" />

    <TextView
        android:id="@+id/tv_actC_id"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:gravity="center_vertical"
        android:text="ID"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_actualizar_cliente"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_actualizar_cliente"
        app:layout_constraintTop_toBottomOf="@+id/tv_actualizar_cliente"
        tools:ignore="RtlCompat" />

    <CheckBox
        android:id="@+id/cb_actC_activo"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Activo"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/input_actC_fechaRegistro"
        app:layout_constraintTop_toBottomOf="@+id/input_actC_fechaRegistro" />

</androidx.constraintlayout.widget.ConstraintLayout>