<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp">

    <ImageView
        android:id="@+id/iv_seguir_viendo"
        android:layout_width="280dp"

        android:layout_height="211dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/gradient"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/ib_seguir_viendo_opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="#00FFFFFF"
        android:contentDescription="Opciones de seguir viendo"
        app:layout_constraintEnd_toEndOf="@+id/iv_seguir_viendo"
        app:layout_constraintTop_toTopOf="@+id/iv_seguir_viendo"
        app:srcCompat="@drawable/ic_puntos_verticales"
        app:tint="@color/blanco" />

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:foregroundTint="#00FFFFFF"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_seguir_viendo"
        app:layout_constraintStart_toStartOf="@+id/iv_seguir_viendo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/ib_seguir_viendo_play"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/border_radious_1000dp"
                app:srcCompat="@drawable/ic_play_fill"
                app:tint="@color/blanco" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_seguir_viendo_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="@+id/iv_recomendacion_portada"
                    app:layout_constraintStart_toStartOf="@+id/iv_recomendacion_portada"
                    app:layout_constraintTop_toBottomOf="@+id/iv_recomendacion_portada" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:gravity="fill_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_seguir_viendo_temporada"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="70dp"
                        android:text="TextView"
                        android:textColor="#AFAFAF"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_seguir_viendo_tiempo_restante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#8A000000"
                        android:text="TextView"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>