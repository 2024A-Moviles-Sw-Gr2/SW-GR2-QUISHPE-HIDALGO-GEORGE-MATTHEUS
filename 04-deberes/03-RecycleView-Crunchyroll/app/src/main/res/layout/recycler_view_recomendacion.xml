<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_rv_recomendaciones"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000">

    <TextView
        android:id="@+id/tv_recomendacion_titulo"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/iv_recomendacion_portada"
        app:layout_constraintStart_toStartOf="@+id/iv_recomendacion_portada"
        app:layout_constraintTop_toBottomOf="@+id/iv_recomendacion_portada" />

    <ImageView
        android:id="@+id/iv_recomendacion_portada"
        android:layout_width="125dp"
        android:layout_height="175dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recomendacion_idioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#AFAFAF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/ib_recomendacion_opciones"
        app:layout_constraintStart_toStartOf="@+id/tv_recomendacion_titulo"
        app:layout_constraintTop_toTopOf="@+id/ib_recomendacion_opciones" />

    <ImageButton
        android:id="@+id/ib_recomendacion_opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:contentDescription="Opciones de recomendaciÃ³n"
        android:tint="#AFAFAF"
        app:layout_constraintEnd_toEndOf="@+id/tv_recomendacion_titulo"
        app:layout_constraintTop_toBottomOf="@+id/tv_recomendacion_titulo"
        app:srcCompat="@drawable/ic_puntos_verticales" />

</androidx.constraintlayout.widget.ConstraintLayout>